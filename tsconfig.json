{
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "noEmitOnError": true,
    "outDir": "./lib",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "ES2018",
    "typeRoots" : ["node_modules/@types", "src/types"],
  },
  "exclude": ["**/__tests__/*"],
  "include": ["src", "./src/index.d.ts"]
}
